@model Agri_Energy_Connect.Models.ProductCategory

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow" style="background-color: #F5F5F5;">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Create Product Category</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="CategoryName" class="form-label text-dark">Category Name</label>
                            <input asp-for="CategoryName" class="form-control" style="background-color: #FFFFFF;" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Details" class="form-label text-dark">Details</label>
                            <input asp-for="Details" class="form-control" style="background-color: #FFFFFF;" />
                            <span asp-validation-for="Details" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-action="Index" class="text-decoration-none" style="color: #388E3C;">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
