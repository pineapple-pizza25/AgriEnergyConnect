@model Agri_Energy_Connect.Models.Farm

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow" style="background-color: #F5F5F5;">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Create Farm</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="FarmerId" class="form-label text-dark">Farmer ID</label>
                            <select asp-for="FarmerId" class="form-control" asp-items="ViewBag.FarmerId" style="background-color: #FFFFFF;"></select>
                            <span asp-validation-for="FarmerId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FarmName" class="form-label text-dark">Farm Name</label>
                            <input asp-for="FarmName" class="form-control" style="background-color: #FFFFFF;" />
                            <span asp-validation-for="FarmName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FarmDescription" class="form-label text-dark">Farm Description</label>
                            <input asp-for="FarmDescription" class="form-control" style="background-color: #FFFFFF;" />
                            <span asp-validation-for="FarmDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FarmAddress" class="form-label text-dark">Farm Address</label>
                            <input asp-for="FarmAddress" class="form-control" style="background-color: #FFFFFF;" />
                            <span asp-validation-for="FarmAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-action="Index" class="text-decoration-none" style="color: #388E3C;">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
