@model IEnumerable<Agri_Energy_Connect.Models.Farm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FarmName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FarmDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FarmAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Farmer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FarmName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FarmDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FarmAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Farmer.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
